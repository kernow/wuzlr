
<table id="fuckingsweet">
	<tr class="sickass">
		<th></th>
		<th>Pld</th>
		<th>Won</th>
		<th>Lst</th>
		<th>Win %</th>
		<th title="Winning Streak">Wsk</th>
		<th title="Losing Streak">Lsk</th>
	</tr>
	<% @players.each do |p| %>
		<tr class="phatass">
			<td class="youruglymug"><%= link_to gravatar_for(p), user_path(p) %></td>
			<td><%= p.played                     %></td>
			<td><%= p.won                        %></td>
			<td><%= p.lost                       %></td>
			<td><%= p.win_p.to_s + "%"           %></td>
			<td><%= p.longest_winning_streak     %></td>
			<td><%= p.longest_losing_streak      %></td>
		</tr>
	<% end %>
</table>

<span class="newmatchup"><%= link_to 'New match', new_league_match_path(@league) %></span>

<ul class="doitlikebritney clear">
<li><hr/></li>
	<li><%= link_to 'Invite Players', new_league_invite_path(@league) if @league.member_of?(current_user) %></li>
	<li><%= link_to 'Edit', edit_league_path(@league) if @league.owner?(current_user) %></li>
</ul>

<div class="charter clear">
<%= remote_graph("Table Bias",{ :route => league_graphs_path( :id => @league, :action => :table_bias ), :width => "500px", :height => "300px"}) %>
</div>
